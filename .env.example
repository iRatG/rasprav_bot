BOT_TOKEN=your_bot_token_here
BOT_USERNAME=your_bot_username

# Генерируй: python -c "import secrets; print(secrets.token_hex(32))"
WEBHOOK_SECRET=random_secret_string

# URL куда Telegram будет слать апдейты (нужен HTTPS)
# Локально: используй ngrok, на сервере — твой домен
WEBHOOK_URL=https://your-domain.com/webhook

# PostgreSQL
POSTGRES_DB=massage_bot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=strong_password_here

# SQLAlchemy — async (для бота/FastAPI)
DATABASE_URL=postgresql+asyncpg://postgres:strong_password_here@db:5432/massage_bot

# SQLAlchemy — sync (для Flask-Admin)
SYNC_DATABASE_URL=postgresql+psycopg2://postgres:strong_password_here@db:5432/massage_bot

# Flask-Admin session secret
ADMIN_SECRET_KEY=random_secret_for_flask_session
